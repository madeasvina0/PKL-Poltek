<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="10dp"
    android:paddingTop="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPromo"
        android:layout_width="150dp"
        android:layout_height="170dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPromo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/apple" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="Apel Fuji 1 Kg"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="No Member"
                android:textSize="10sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-25dp"
                android:text="Member Only"
                android:textSize="10sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/txtHargaNormal"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Rp 50.000"
                android:textSize="10sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtHargaPromo"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="-20dp"
                android:text="Rp 25.000"
                android:textColor="@color/warna_harga"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>