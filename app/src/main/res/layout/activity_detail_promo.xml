<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPromoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#2196F3"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/arrowbalik"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Produk Detail"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/bell"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/keranjang"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageView2"
                            android:layout_marginRight="20dp"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/imgPromo"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/berry"
                android:layout_marginTop="-300dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/white"
                android:layout_marginTop="70dp"/>

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cherry 1 Kg"
                android:layout_marginTop="-120dp"
                android:layout_marginStart="10dp"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masa berlaku promo 22 Desember 2023 - 1 Januari 2023"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:textColor="@color/promo"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/fullbintang"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>


            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Non Member"
                android:layout_marginStart="205dp"
                android:layout_marginTop="-25dp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/txtHargaNormal"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Rp 40.000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="-50dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Member Only"
                android:layout_marginStart="310dp"
                android:layout_marginTop="7dp"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/txtHargaPromo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Rp 20.000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="310dp"
                android:layout_marginTop="-51dp"
                android:textColor="@color/warna_harga"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tersedia 5 pcs"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/barcode_garis" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_promo"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"/>
            </LinearLayout>



        </LinearLayout>



    </ScrollView>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/button_background"
        android:text="Tambah Ke Keranjang " />
</RelativeLayout>